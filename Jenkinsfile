pipeline {
    agent any  // Runs on any available agent
    
    stages {
        stage("build") {
            steps {
                echo 'building the application...'  // Build step
            }
        }
        
        stage("test") {
            steps {
                echo 'testing the application...'  // Test step
            }
        }
        
        stage("deploy") {
            steps {
                echo 'deploying the application...'  // Deploy step
            }
        }
    }
}
